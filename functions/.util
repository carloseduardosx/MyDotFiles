#!/bin/bash

addGoAlias() {
  alias_name=$1
  echo "alias go$alias_name=\"cd `pwd`\"" >> $HOME/MyDotFiles/.goaliases
  source $HOME/.zshrc
}

cp_file_content() {
  local file="$1"
  cat `pwd`/file | pbcopy
}

find_function() {
  type -a $1
}

count_files_recursively() {

  local directory=$1

  if [[ -d $directory ]] then

    find $directory -type f -print | wc -l
  else

    error "The path passed should be a directory!"
  fi
}

show_enviroment_variables() {

  info "$(printenv | sort)"
}
