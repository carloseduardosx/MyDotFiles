#!/bin/bash

addGoAlias() {
  alias_name=$1
  echo "alias go$alias_name=\"cd `pwd`\"" >> $HOME/Projects/MyDotFiles/.goaliases
  source $HOME/.zshrc
}

cp_file_content() {
  local file="$1"
  cat `pwd`/file | pbcopy
}

find_function() {
  type -a $1
}

build_failure() {

  exit 1
}

build_success() {

  exit 0
}

count_files_recursively() {

  local directory=$1

  if [[ -d $directory ]] then

    file_number="$(find $directory -type f -print | wc -l)"
    info "$file_number files in this directory"
  else

    error "The path passed should be a directory!"
  fi
}

show_enviroment_variables() {

  info "$(printenv | sort)"
}


# Get colors in manual pages
man() {
    env \
        LESS_TERMCAP_mb=$(printf "\e[1;31m") \
        LESS_TERMCAP_md=$(printf "\e[1;31m") \
        LESS_TERMCAP_me=$(printf "\e[0m") \
        LESS_TERMCAP_se=$(printf "\e[0m") \
        LESS_TERMCAP_so=$(printf "\e[1;44;33m") \
        LESS_TERMCAP_ue=$(printf "\e[0m") \
        LESS_TERMCAP_us=$(printf "\e[1;32m") \
        man "$@"
}
