#!/bin/bash
function docker_run_detached_mod() {

  docker run -d -P --name $1
}

function dmstart() {

  machine="$1"

  if [[ -z "$machine" ]]; then

    error "Should pass machine name!"
  else

    searched_machine=$(docker-machine ls | grep "$1" -o -m 1)

    if [[ "$searched_machine" == "$machine" ]]; then
      docker-machine start $1
      docker-machine env $1
      eval $(docker-machine env $1)
    else
      error "Docker machine not exist"
    fi
  fi
}

function dcupc() {

  if [[ -n "$1" ]]; then
    docker-compose up -d $1
  else
    error "Should pass machine name!"
  fi
}

function dcstopc() {

  if [[ -n "$1" ]]; then
    docker-compose stop $1
  else
    error "Should pass machine name!"
  fi
}

function dbash() {

  if [[ -n "$1" ]]; then
    docker exec -it $1 /bin/bash
  else
    error "Should pass machine name!"
  fi
}

function dmstop() {

  machine="$1"

  if [[ -z "$machine" ]]; then

    error "Should pass machine name!"
  else

    searched_machine=$(docker-machine ls | grep "$1" -o -m 1)

    if [[ "$searched_machine" == "$machine" ]]; then
      docker-machine stop $1
    else
      error "Docker machine not exist"
    fi
  fi
}

function dmssh() {

  if [[ -n "$1" ]]; then
    docker-machine ssh $1
  else
    error "Docker machine not exist"
  fi
}

function drm() {
  docker rm $1
}

function drmallc() {
  docker rm `docker ps -a -q`
}

function dm-eval() {
  eval $(docker-machine env "$1")
}

function dm-uneval() {
  eval $(docker-machine env -u)
}

function dm-stop-all() {
  docker-machine stop $(docker-machine ls -q)
}

function dm-start-all() {
  docker-machine start $(docker-machine ls -q)
}

